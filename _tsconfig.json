{
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES5",  
      "lib": ["es2015"],  
      "noImplicitAny": false,
      "removeComments": true,
      "strict": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "outDir": "bin"
  },
  "files": [
      "src/index.ts"
  ],
  "include": ["src/**/*"],
  "paths": {
    "*": [
      "@types/*",
      "*"
    ]
  }
}